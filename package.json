{
  "name": "soundboard",
  "version": "0.2.4",
  "private": true,
  "type": "module",
  "main": "build/electron.js",
  "homepage": "./",
  "typings": "types.d.ts",
  "author": {
    "name": "Manuel",
    "email": "test@test.com"
  },
  "dependencies": {
    "@types/dom-mediacapture-record": "^1.0.22",
    "cors": "^2.8.6",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.7.3",
    "express": "^5.2.1",
    "mime": "^4.1.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-scripts": "5.0.1",
    "web-vitals": "^5.1.0"
  },
  "scripts": {
    "react-start": "npm run compile | react-scripts start",
    "start": "concurrently 'npm run react-start' 'wait-on http://localhost:3000 && electron build/electron.js'",
    "winStart": "concurrently \"npm run react-start\" \"wait-on http://localhost:3000 && electron .\\build\\electron.js\"",
    "electron-build": "npm run build && electron-builder",
    "compile": "tsc -p tsconfig.electron.json",
    "compile-watch": "tsc -p tsconfig.electron.json -w",
    "build": "react-scripts build && npm run compile",
    "test": "react-scripts test",
    "e-dev": "electron build/electron.js",
    "eject": "react-scripts eject",
    "electron-pack": "electron-builder --em.main=build/electron.js"
  },
  "build": {
    "icon": "build/icon.png",
    "appId": "com.example.electron-cra",
    "linux": {
      "target": [
        {
          "target": "AppImage"
        }
      ]
    },
    "win": {
      "publish": [
        "github"
      ],
      "target": [
        {
          "target": "nsis",
          "arch": "ia32"
        }
      ]
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.2.1",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "concurrently": "^9.2.1",
    "electron": "^40.2.1",
    "electron-builder": "^26.7.0",
    "electron-devtools-installer": "^4.0.0",
    "electron-pack": "^1.3.2",
    "electron-reload": "^1.5.0",
    "nodemon": "^3.1.11",
    "typescript": "^5.9.3",
    "wait-on": "^9.0.3"
  }
}
